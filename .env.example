# Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================
#                    BLOCKCHAIN CONFIGURATION
# =============================================================

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Contract addresses
NFT_CONTRACT_ADDRESS=0x7649366eeb2F996513C4A929d9A980779Cf2364C
PAYMENT_GATEWAY_ADDRESS=

# Wallet for Stripe signature validation
STRIPE_VALIDATOR_ADDRESS=

# Network access
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
REPORT_GAS=false

# =============================================================
#                    CONTRACT DEPLOYMENT PARAMETERS
# =============================================================

CONTRACT_NAME=Skunk Squad
CONTRACT_SYMBOL=SKUNK
BASE_URI=https://metadata.skunksquadnft.com/
CONTRACT_URI=https://metadata.skunksquadnft.com/contract.json
UNREVEALED_URI=https://metadata.skunksquadnft.com/unrevealed.json
ROYALTY_RECIPIENT=0x0000000000000000000000000000000000000000

# =============================================================
#                    STRIPE PAYMENT CONFIGURATION
# =============================================================

# Stripe API Keys (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhook Secret (Get from webhook endpoint settings)
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================
#                    PAYMENT SERVER CONFIGURATION
# =============================================================

# Server settings
PORT=3002
NODE_ENV=development

# API URL for frontend
REACT_APP_API_URL=http://localhost:3002
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Security settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100
PAYMENT_TIMEOUT_SECONDS=1800
MAX_QUANTITY_PER_PURCHASE=10

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://skunksquadnft.com

# =============================================================
#                    OPTIONAL INTEGRATIONS
# =============================================================

# Email notifications (optional)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@skunksquadnft.com

# Analytics and monitoring (optional)
MIXPANEL_TOKEN=
SENTRY_DSN=

# Database (for advanced features)
DATABASE_URL=

# Debug logging
DEBUG=true
LOG_LEVEL=info