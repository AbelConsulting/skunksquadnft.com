# Skunk Squad NFT Environment Configuration
# IMPORTANT: Copy this file to .env and fill in your actual values

# =============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# =============================================================================

# Ethereum Mainnet RPC URL (Get from Alchemy, Infura, or QuickNode)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# =============================================================================
# DEPLOYMENT WALLET CONFIGURATION
# =============================================================================

# PRIVATE KEY for deployment (NEVER SHARE OR COMMIT TO GIT)
# This should be the private key of your deployment wallet
# Make sure this wallet has sufficient ETH for deployment
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# =============================================================================
# CONTRACT VERIFICATION
# =============================================================================

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# =============================================================================
# CONTRACT CONFIGURATION
# =============================================================================

# Contract Names and Symbols
CONTRACT_NAME=SkunkSquad NFT Ultra Smart
CONTRACT_SYMBOL=SKULL

# Arweave Metadata URIs (ALREADY CONFIGURED)
BASE_URI=ar://0770a619-f2f1-4c59-9d1d-2fceb4a9294d/
CONTRACT_URI=ar://0770a619-f2f1-4c59-9d1d-2fceb4a9294d/contract.json
UNREVEALED_URI=ar://0770a619-f2f1-4c59-9d1d-2fceb4a9294d/unrevealed.json

# Royalty Configuration
ROYALTY_RECIPIENT=0x16Be43d7571Edf69cec8D6221044638d161aA994
ROYALTY_FEE=500

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# Stripe Configuration (for credit card payments)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Payment Gateway Settings
PAYMENT_GATEWAY_USD_PRICE=5000
PAYMENT_GATEWAY_VALIDATOR=0x16Be43d7571Edf69cec8D6221044638d161aA994

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Gas Reporter (for testing)
REPORT_GAS=false

# Network Configuration Override
NETWORK=mainnet

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. NEVER commit your .env file to git
# 2. Use a dedicated deployment wallet
# 3. Ensure sufficient ETH balance (minimum 0.5 ETH for mainnet)
# 4. Test on Sepolia first
# 5. Double-check all addresses and configuration